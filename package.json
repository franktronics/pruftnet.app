{
    "name": "pruftnet",
    "private": false,
    "type": "module",
    "scripts": {
        "dev:web": "pnpm -F @repo/web run dev",
        "dev:desktop": "node setup-dev.js && pnpm -F @repo/desktop run dev",
        "build:core": "pnpm -F @repo/core-cpp run build",
        "db:init": "pnpm --filter @repo/core-node prisma migrate dev && pnpm --filter @repo/core-node prisma generate",
        "db:studio": "pnpm --filter @repo/core-node prisma studio",
        "format": "prettier --write .",
        "clean": "node clean.js",
        "setup:caps": "sudo setcap cap_net_raw,cap_net_admin=eip $(which node)",
        "check:caps": "getcap $(which node)"
    },
    "packageManager": "pnpm@10.28.1",
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/engines",
            "@swc/core",
            "@tailwindcss/oxide",
            "better-sqlite3",
            "electron",
            "electron-winstaller",
            "esbuild",
            "prisma",
            "unrs-resolver"
        ],
        "overrides": {
            "tmp@<=0.2.3": ">=0.2.4",
            "tar@<=7.5.2": ">=7.5.3"
        }
    }
}
